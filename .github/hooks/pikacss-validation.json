{
	"hooks": {
		"SessionStart": [
			{
				"type": "command",
				"command": "rm -f /tmp/.pikacss-session-modified-files",
				"timeout": 5
			}
		],
		"PostToolUse": [
			{
				"type": "command",
				"command": ".github/hooks/scripts/track-edits.sh",
				"timeout": 10
			}
		],
		"Stop": [
			{
				"type": "command",
				"command": ".github/hooks/scripts/validate-changes.sh",
				"timeout": 600
			}
		]
	}
}
